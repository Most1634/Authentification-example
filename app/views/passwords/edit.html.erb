  <%= render "layouts/header" %>

<div class="d-flex align-items-center justify-content-center">
<h1>Password reset </h1>
</div>
<div class="col-md-4 mx-auto">
<%= form_with model: current_user , url: password_path do |form| %>
   
<% if form.object.errors.any? %>
<% form.object.errors.full_messages.each do |message| %>
    <div>
    <%= message %>
    </div>
<% end %>
<% end %> 

<div>
<%= form.label :password_challenge, "Current Password" , class: "form-label"%>
<%= form.password_field :password_challenge , class: "form-control"%>
</div>

<div>
<%= form.label :password, "New Password ", class:"form-label" %>
<%= form.password_field :password, class: "form-control" %>
</div>


<div>
<%= form.label :password_confirmation, class: "form-label" %>
<%= form.password_field :password_confirmation, class: "form-control" %>
</div>

<div>
<%= form.submit "Update password ", class: "btn btn-success" %>
</div>


<% end %>    

</div>











